@model WebsiteBuilder.Public.Website.WebsiteDto

@{
    ViewBag.Title = "Nowa strona";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>Nowa strona</h5>
    </div>
    <div class="ibox-content">
        <form id="add-website-form" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Nazwa strony</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "" })
                    <label for="Name" generated="true" class="error"></label>
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary" type="button" id="add-website-btn">Stwórz nową stronę</button>
                    <button class="btn btn-white" type="button" onclick="window.history.back()">Anuluj</button>
                </div>
            </div>
        </form>

    </div>

</div>

@section Scripts{
    <script src="~/ScriptsApp/Website/AddWebsite.js"></script>

}

